@model wmbaApp.Models.Lineup



<div class="modal fade" id="homeLineUp" tabindex="-1" role="dialog" aria-labelledby="homeLineUpLabel" aria-hidden="true" style="width: 100%;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="homeLineUpLabel">@ViewData["HomeTeamName"] Lineup</h2>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Players:</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var playerLineup in Model.PlayerLineups)
                        {
                            <tr>
                                <td class="font-italic font-weight-bold">@playerLineup.Player.FullName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <div style="display: block; margin: 0 auto;">
                    <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>