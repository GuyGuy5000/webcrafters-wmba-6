@model wmbaApp.Models.Coach

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Coach</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoachFirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoachFirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoachLastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoachLastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DivisionCoaches.FirstOrDefault().Team)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DivisionCoaches.FirstOrDefault().Team.TmName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DivisionCoaches.FirstOrDefault().Division)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DivisionCoaches.FirstOrDefault().Division.DivName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-outline-dark" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index" class="btn btn-outline-dark">Back to Coach List</a>
</div>
