<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - wmbaApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/wmbaApp.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/220fe8c60c.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap 5 JS with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.3/dist/js/bootstrap.bundle.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/context-help.js"></script>

</head>
<body>
    <header>

        <style>
            .custom-hover-effect:hover {
                color: #fff !important;
            }

            .secondLogo:hover {
                background-color: #fff !important;
            }
        </style>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="secondLogo img-fluid " src="~/Image/WMBA.png" alt="Logo" tabindex="1" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark custom-hover-effect" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark custom-hover-effect" asp-area="" asp-controller="Teams" asp-action="Index">Teams</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark custom-hover-effect" asp-area="" asp-controller="Players" asp-action="Index">Players</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark custom-hover-effect" asp-area="" asp-controller="Games" asp-action="Index">Games</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-bs-target="#navbarDropdown">
                                Menu
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
@*                                 <a class="nav-link text-dark custom-hover-effect" asp-area="" asp-controller="Statistics" asp-action="Index">Statistics</a> *@
                                <a class="nav-link text-dark custom-hover-effect" asp-area="" asp-controller="Divisions" asp-action="Index">Divisions</a>
@*                                 <a class="nav-link text-dark custom-hover-effect" asp-area="" asp-controller="DivisionCoach" asp-action="Index">Division-Coach</a> *@
                                <a class="nav-link text-dark custom-hover-effect" asp-area="" asp-controller="Coaches" asp-action="Index">Coaches</a>
                            </div>
                        </li>

                    </ul>
                    <div class="help-icon d-sm-inline-flex justify-content-between" id="help-icon" style="margin-top: 25px;" accesskey="h">
                        <span class="icon fa-solid fa-question"></span>
                    </div>
                </div>
                <div class="help-box" id="help-box">
                    <div class="help-content">
                        <p>This is the first explanation.</p>
                    </div>
                    <div class="help-actions">
                        <label id="pageNum" style="margin-right: 10px"></label>
                        <button id="skipBtn" tabindex="15">Skip</button>
                        <button id="nextBtn" tabindex="15">Next</button>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WMBA - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
