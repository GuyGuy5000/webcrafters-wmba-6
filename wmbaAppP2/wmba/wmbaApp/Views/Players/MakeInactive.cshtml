<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlyrFirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlyrFirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlyrLastName)
        </dt>
        <dd class="col-sm-10">
