@model wmbaApp.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">@Html.DisplayFor(model => model.FullVersus)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeTeam.TmName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AwayTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AwayTeam.TmName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartTimeSummary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartTimeSummary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndTimeSummary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndTimeSummary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameLocation)
        </dd>
    </dl>
</div>
<hr />


<div class="row">
    <div class="col-md-6">
        <h3>Home Team Lineup</h3>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Player Name</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.HomeLineup != null)
                {
                    foreach (var playerLineup in Model.HomeTeam.Players.Where(p => p.PlayerLineups.Any(pl => pl.PlayerID == p.ID)).ToList() as List<wmbaApp.Models.Player>)
                    {
                        <tr>
                            <td class="font-italic font-weight-bold">@playerLineup.FullName</td>
                        </tr>
                    }
                }
                else
                {
                    foreach (var playerLineup in Model.HomeTeam?.Players)
                    {
                        <tr>
                            <td class="font-italic font-weight-bold">@playerLineup.FullName</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h3>Away Team Lineup</h3>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Player Name</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.AwayLineup != null)
                {
                    foreach (var playerLineup in Model.AwayTeam.Players.Where(p => p.PlayerLineups.Any(pl => pl.PlayerID == p.ID)).ToList() as List<wmbaApp.Models.Player>)
                    {
                        <tr>
                            <td class="font-italic font-weight-bold">@playerLineup.FullName</td>
                        </tr>
                    }
                }
                else
                {
                    foreach (var playerLineup in Model.AwayTeam?.Players)
                    {
                        <tr>
                            <td class="font-italic font-weight-bold">@playerLineup.FullName</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-center" style="margin-top: 50px;">
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-primary">Edit</a> 
    <a asp-action="Index" class="btn btn-primary">Back to List</a> 
    <a asp-action="Create" asp-controller="Lineups" asp-route-gameId="@Model.ID" class="btn btn-success">Edit Game Lineup</a>
</div>
