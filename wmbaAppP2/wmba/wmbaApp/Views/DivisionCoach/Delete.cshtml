@model wmbaApp.Models.DivisionCoach

<h4>Are you sure you want to delete @Model.Division.DivName?</h4>
<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Division)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Division.DivName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Coach)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Coach.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Team)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Team.TmName)
        </dd>
    </dl>
    
    @{
        if (!ViewData.ModelState.IsValid)
        {
            /* redirect to player index with the team name as a search string.
            * Can be changed later redirect to a specific index that shows only one team's players at a time */
            <form asp-controller="DivisionCoach" asp-action="Index" asp-route-TeamID="@Model?.DivisionID">
                <div style="color: #F00;">@Html.ValidationSummary()</div>
                <input type="submit" value="View Players" class="btn btn-link" />
            </form>
            <br />
        }
    }
    <form asp-action="Delete">
        <input type="hidden" asp-for="DivisionID" />
        <input type="submit" value="Delete" class="btn btn-outline-dark " />
        <a asp-action="Index" class="btn btn-outline-dark">Back to Division-Coach List</a>
    </form>
</div>
