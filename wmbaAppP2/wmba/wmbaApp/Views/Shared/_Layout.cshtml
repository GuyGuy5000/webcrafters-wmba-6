<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - wmbaApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/wmbaApp.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/220fe8c60c.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap 5 JS with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.3/dist/js/bootstrap.bundle.min.js"></script>



    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


</head>
<body class="home-page ">
    <header>
        @* removing nav bar at login and register page *@
        @if (!ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/Login", StringComparison.OrdinalIgnoreCase) &&
        !ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/Register", StringComparison.OrdinalIgnoreCase) &&
        !ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/ResetPassword", StringComparison.OrdinalIgnoreCase) &&
        !ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/ResetPasswordConfirmation", StringComparison.OrdinalIgnoreCase) &&
        !ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/LoginWithRecoveryCode", StringComparison.OrdinalIgnoreCase) &&
        !ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/ForgotPasswordConfirmation", StringComparison.OrdinalIgnoreCase) &&
        !ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/ForgotPassword", StringComparison.OrdinalIgnoreCase) &&
        !ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/ResendEmailConfirmation", StringComparison.OrdinalIgnoreCase) &&
        !ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/LoginWith2fa", StringComparison.OrdinalIgnoreCase) &&
        !ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/RegisterConfirmation", StringComparison.OrdinalIgnoreCase))
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light yemiNav border-bottom box-shadow mb-0" id="navBar">
                <div class="container-fluid" style="padding-bottom: 0px;">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" id="homeLink" asp-action="Index">
                        <img class="secondLogo img-fluid " id="imgHome" src="~/Image/WMBA (9).png" alt="Logo" tabindex="1" />
                    </a>

                    <a href="#">
                        <div class="img-container">
                            <img class="secondLogo img-fluid statsLogo float-left" id="img" style="height: 1000px;" src="~/Image/WMBA (9).png" alt="Logo" tabindex="1" />
                        </div>
                    </a>




                    @if (ViewContext.RouteData.Values["controller"] != null)
                    {
                        @if (User.Identity.IsAuthenticated && (ViewContext.RouteData.Values["controller"].ToString() == "ScoreKeeping" || ViewContext.RouteData.Values["controller"].ToString() == "ScoreKeepingAwayTeam"))
                        {
                            <div class="help-icon-container" id="help-icon" accesskey="h">
                                <span class="help-icon fa-solid fa-question"></span>
                            </div>


                            <div class="help-box" id="help-box">
                                <div class="help-content">
                                    <p>This is the first explanation.</p>
                                </div>
                                <div class="help-actions">
                                    <label id="pageNum" style="margin-right: 10px"></label>
                                    <button id="skipBtn" tabindex="15">Skip</button>
                                    <button id="nextBtn" tabindex="15">Next</button>
                                </div>
                            </div>
                        }

                        else
                        {


                            <button class="navbar-toggler text-white hamburger-icon" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="navbar-collapse text-white collapse d-sm-inline-flex justify-content-between">
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link text-white custom-hover-effect" asp-area="" asp-controller="Teams" asp-action="Index">Teams</a>
                                    </li>
                 

                                    <li class="nav-item">
                                        <a class="nav-link text-white custom-hover-effect" asp-area="" asp-controller="Players" asp-action="Index">Players</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white custom-hover-effect" asp-area="" asp-controller="Games" asp-action="Index">Games</a>
                                    </li>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Convenor"))
                                    {
                                        <li class="nav-item dropdown">
                                            <a class="nav-link text-white  dropdown-toggle menu" href="#" id="navbarDropdown" role="button"
                                               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-bs-target="#navbarDropdown">
                                                Tools
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                <a class="nav-link text-dark menuEffect " asp-area="" asp-controller="Statistics" asp-action="Index">Statistics</a>
                                                <a class="nav-link text-dark menuEffect" asp-area="" asp-controller="Divisions" asp-action="Index">Divisions</a>
                                                <a class="nav-link text-dark menuEffect " asp-area="" asp-controller="Teams" asp-action="Create">Create Teams</a>
                                                <a class="nav-link text-dark menuEffect " asp-area="" asp-controller="Coaches" asp-action="Index"> Coaches</a>
                                                <a class="nav-link text-dark menuEffect " asp-area="" asp-controller="Home" asp-action="ImportTeams">Import Teams</a>
                                                <a class="nav-link text-dark menuEffect " asp-area="" asp-controller="Lookup" asp-action="Index">Maintain Lookups</a>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a class="nav-link text-dark menuEffect" asp-area="" asp-controller="UserRole" asp-action="Index">Maintain Users</a>
                                                }
                                            </div>
                                        </li>
                                    }
                                    else if (User.IsInRole("Coach"))
                                    {
                                        <li class="nav-item dropdown">
                                            <a class="nav-link text-white  dropdown-toggle menu" href="#" id="navbarDropdown" role="button"
                                               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-bs-target="#navbarDropdown">
                                                Tools
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                <a class="nav-link text-dark menuEffect " asp-area="" asp-controller="Statistics" asp-action="Index">Statistics</a>
                                               
                                            </div>
                                        </li>
                                    }
                                </ul>

                                <div class="helloAdmin">
                                    <partial name="_LoginPartial" />
                                </div>

                                <div class="help-icon-container" id="help-icon" accesskey="h">
                                    <span class="help-icon fa-solid fa-question"></span>
                                </div>
                            </div>




                            <div class="help-box" id="help-box">
                                <div class="help-content">
                                    <p>This is the first explanation.</p>
                                </div>
                                <div class="help-actions">
                                    <label id="pageNum" style="margin-right: 10px"></label>
                                    <button id="skipBtn" tabindex="15">Skip</button>
                                    <button id="nextBtn" tabindex="15">Next</button>
                                </div>
                            </div>
                        }
                    }

                </div>

            </nav>

            <nav class="phoneNav">
                <a asp-controller="Home" asp-action="Index" class="phoneIcon "><i class="fa fa-home"></i><br>Home</a>
                <a asp-controller="Teams" asp-action="Index" class="phoneIcon "> <i class="fa-solid fa-users iconP"></i><br>Team</a>
                <a asp-controller="Players" asp-action="Index" class="phoneIcon "><i class="fa-solid fa-user-plus iconP"></i><br>Player</a>
                <a asp-controller="Games" asp-action="Index" class="phoneIcon "><i class="fa-solid fa-baseball-bat-ball iconP"></i><br>Games</a>
            </nav>


            <button type="button" class="btn btn-outline-dark">
                Preview Lineup
            </button>

            <nav class="scoreKeepingNav" id="scoreBar">
                <input id="btnScorekeepingNav" type="button" value="V" style="margin: 0 42.5%; width: 15%; border-radius: 15px 15px 5px 5px; border: 1px solid #FFF; background-color: #17254c; color: #FFF;" />
                <div id="navToggleContainer">
                    <a href="#BaseballDiamond" id="btnBatterAction" onclick="ShowBatterAction()" class="phoneIcon"><i class="fa-solid fa-baseball iconP"></i><br>Score</a>
                    <a href="#homeLineUp" class="phoneIcon" data-bs-toggle="modal" data-bs-target="#homeLineUp"><i class="fa-solid fa-shirt iconP"></i><br>My Team</a>
                    <a href="#awayLineUp" class="phoneIcon" data-bs-toggle="modal" data-bs-target="#awayLineUp"><i class="fa-solid fa-shirt iconP" style="color: #808080;"></i><br>Opponent</a>
                    <a href="#playByPlay" class="phoneIcon" data-bs-toggle="modal" data-bs-target="#playByPlay"><i class="fa-solid fa-list iconP"></i><br>Play-by-Play</a>
                    <a href="#" class="phoneIcon"><i class="fa-solid fa-chart-simple iconP"></i><br><s>Stats</s></a>
                </div>
            </nav>




            <nav class="phoneBack" id="phoneBack">
                <a href="javascript:void(0);" onclick="back()">
                    <i class="fa-solid fa-angle-left" style="color: black"></i>
                </a>
            </nav>

        }
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br />
    <br />
    <br />
    <footer class="border-top footer text-muted  d-none d-lg-block ">
        <div class="container" style="color: #fff;">
            &copy; 2024 - WMBA
        </div>
    </footer>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/context-help.js"></script>
    <script type="text/javascript">
        let btnScorekeepingNav = document.getElementById("btnScorekeepingNav");
        btnScorekeepingNav.addEventListener("click", function () { ToggleScorekeepingNav(); });
        function ToggleScorekeepingNav() {

            let navToggleContainer = document.getElementById("navToggleContainer");
            if (btnScorekeepingNav.value == "V") {
                navToggleContainer.style.display = "none";
                btnScorekeepingNav.value = "^";
            }
            else {
                navToggleContainer.style.display = "block";
                btnScorekeepingNav.value = "V";
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
