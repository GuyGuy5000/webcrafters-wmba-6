@model wmbaApp.Models.Statistic

<partial name="_ViewHeading" />

<form class="statisticform" id="statisticform">
    <fieldset>
        <div class="specific-Stats">
            <div class="container">
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsGP)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsGP)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsPA)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsPA)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsAB)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsAB)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsAVG)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsAVG)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsOBP)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsOBP)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsOPS)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsOPS)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsSLG)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsSLG)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsH)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsH)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsR)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsR)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsK)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsK)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsHR)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsHR)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsRBI)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsRBI)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatsBB)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatsBB)
                    </dd>
                </dl>
            </div>
        </div>

        <table class="specific-table">
            <tr>
                <th>Abbreviation</th>
                <th>Meaning</th>
            </tr>
            <tr>
                <td>GP</td>
                <td>Games Played</td>
            </tr>
            <tr>
                <td>PA</td>
                <td>Plate Appearances</td>
            </tr>
            <tr>
                <td>AVG</td>
                <td>Batting Average</td>
            </tr>
            <tr>
                <td>OBP</td>
                <td>On-base Percentage</td>
            </tr>
            <tr>
                <td>OPS</td>
                <td>On-base Plus Slugging</td>
            </tr>
            <tr>
                <td>SLG</td>
                <td>Slugging Percentage</td>
            </tr>
            <tr>
                <td>H</td>
                <td>Hits</td>
            </tr>
            <tr>
                <td>R</td>
                <td>Runs</td>
            </tr>
            <tr>
                <td>K</td>
                <td>Strikeouts</td>
            </tr>
            <tr>
                <td>HR</td>
                <td>Home Runs</td>
            </tr>
            <tr>
                <td>RBI</td>
                <td>Runs Batted In</td>
            </tr>
            <tr>
                <td>BB</td>
                <td>Base on Balls (Walks)</td>
            </tr>
        </table>


    </fieldset>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-outline-dark">Edit</a>
        <a asp-action="Index" class="btn btn-outline-dark">Back to Staistics List</a>
    </div>
</form>