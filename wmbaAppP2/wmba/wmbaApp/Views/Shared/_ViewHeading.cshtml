@{
    if (ViewData["ActionName"].ToString() == "Details")
    {
        <div class="text-center d-flex align-items-center justify-content-center">

            <h2 style="margin-top: 50px;" class="ms-2">@ViewData["ControllerFriendlyName"]</h2>
        </div>
    }
    else if (ViewData["ActionName"].ToString() == "Index")
    {
        {
            <div class="text-center d-flex align-items-center justify-content-center activeParent">
                <h2 style="margin-top: 50px;" class="ms-2">@ViewData["ControllerFriendlyName"]</h2>
            </div>

        }
    }
    else if (ViewData["ActionName"].ToString() == "InactiveIndex")
    {
        {
            <div class="text-center d-flex align-items-center justify-content-center">
                <h2 style="margin-top: 50px;" class="ms-2">Inactive @ViewData["ControllerFriendlyName"]</h2>
            </div>

        }
    }
    else if (ViewData["ActionName"].ToString() == "FinishedGames")
    {
        {
            <div class="text-center d-flex align-items-center justify-content-center">
                <h2 style="margin-top: 50px;" class="ms-2">Finished @ViewData["ControllerFriendlyName"]</h2>
            </div>
        }
    }
    else if (ViewData["ActionName"].ToString() == "Delete" ||
                ViewData["ActionName"].ToString() == "Remove")
    {
        //Prepare the quesiton about deleting this record
        //Assume we do not have a summary property
        string summary = "this " + ViewData["ControllerFriendlyName"];
        if (ViewData.ModelMetadata.Properties.FirstOrDefault(p => p.PropertyName == "Summary") != null)
        {
            // We DO, we DO have a Summary Property!
            summary = Model.Summary.ToString();
        }

        @:<h2>@ViewData["ActionName"] @ViewData["ControllerFriendlyName"]</h2>
        <p>
            <h4>Are you sure you want to @(ViewData["ActionName"].ToString().ToLower()) @(summary)?</h4>
        </p>
    }
    else
    {
        @:<h2>@ViewData["ActionName"] @ViewData["ControllerFriendlyName"]</h2>
    }
}

