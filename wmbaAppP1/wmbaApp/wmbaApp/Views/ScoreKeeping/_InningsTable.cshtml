@model wmbaApp.ViewModels.GameScoreKeepingVM


<style>
    .innings-table-container {
        display: block;
        margin: 0px auto 20px auto;
        width: 100%;
    }

    .innings-table {
        text-align: center;
        width: 100%;
    }

        .innings-table td,
        .innings-table th {
            background-color: #DEE4FE;
            border: solid 2px #FFF;
        }


        .innings-table th {
            background-color: #2e8b43;
            color: #FFF;
            padding: 5px 0;
        }

        .innings-table .team-th {
            background-color: #2e8b43;
            color: #FFF;
            font-weight: 600;
            padding: 5px 5px;
        }

        .innings-table .inning-heading {
            background-color: #B88453;
            color: #FFF;
            font-weight: 600;
            padding: 5px;
        }
</style>

<section class="innings-table-container">
    <table class="innings-table">
        <tr>
            <th colspan="13">
                Innings
            </th>
        </tr>
        <tr>
            <td class="team-th" colspan="3">
                Team
            </td>
            <td class="inning-heading">
                1
            </td>
            <td class="inning-heading">
                2
            </td>
            <td class="inning-heading">
                3
            </td>
            <td class="inning-heading">
                4
            </td>
            <td class="inning-heading">
                5
            </td>
            <td class="inning-heading">
                6
            </td>
            <td class="inning-heading">
                7
            </td>
            <td class="inning-heading">
                8
            </td>
            <td class="inning-heading">
                9
            </td>
            <td class="inning-heading">
                R
            </td>
        </tr>
        <tr>
            <td colspan="3">
                @Model.HomeTeamName
            </td>
            <td>
                @(Model.CurrentInning >= 0 ? Model.Innings[0].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 1 ? Model.Innings[1].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 2 ? Model.Innings[2].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 3 ? Model.Innings[3].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 4 ? Model.Innings[4].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 5 ? Model.Innings[5].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 6 ? Model.Innings[6].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 7 ? Model.Innings[7].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 8 ? Model.Innings[8].TotalRunsThisInning : "")
            </td>
            <td>
                @Model.Score
            </td>
        </tr>
        <tr>
            <td colspan="3">
                @Model.AwayTeamName
            </td>
            <td>
                @(Model.CurrentInning >= 0 ? Model.Innings[0].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 1 ? Model.Innings[1].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 2 ? Model.Innings[2].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 3 ? Model.Innings[3].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 4 ? Model.Innings[4].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 5 ? Model.Innings[5].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 6 ? Model.Innings[6].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 7 ? Model.Innings[7].TotalRunsThisInning : "")
            </td>
            <td>
                @(Model.CurrentInning >= 8 ? Model.Innings[8].TotalRunsThisInning : "")
            </td>
            <td>
                @Model.Score
            </td>
        </tr>
    </table>
</section>
