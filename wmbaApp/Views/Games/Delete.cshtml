@model wmbaApp.Models.Game

<h2>Are you sure you want to delete this Game?</h2>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameStartTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameStartTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameEndTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameEndTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameLocation)
        </dd>
    </dl>
    
    @{
        if (!ViewData.ModelState.IsValid)
        {
            /* redirect to player index with the team name as a search string.
            * Can be changed later redirect to a specific index that shows only one team's players at a time */
            <form asp-controller="Game" asp-action="Index" asp-route-TeamID="@Model?.ID">
                <div style="color: #F00;">@Html.ValidationSummary()</div>
                <input type="submit" value="View Players" class="btn btn-link" />
            </form>
            <br />
        }
    }
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-outline-dark " /> 
        <a asp-action="Index" class="btn btn-outline-dark">Back to Games List</a>
    </form>
</div>

@section Scripts {
    <script>
        GenerateContextHelp(["<p>This page lets you delete a game.</p>",
            "<p>Click the Delete button to delete a game.</p>",
            "<p>Click the Back to Games list button to go back to the games list.</p>"]);
    </script>
}
