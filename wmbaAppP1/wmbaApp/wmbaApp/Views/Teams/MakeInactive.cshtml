@model wmbaApp.Models.Team

<h2>Are you sure you want to deactivate this team?</h2>
<br />
<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TmName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TmName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Division)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Division.DivName)
        </dd>
    </dl>

    @{
        if (!ViewData.ModelState.IsValid)
        {
            /* redirect to player index with the team name as a search string.
            * Can be changed later redirect to a specific index that shows only one team's players at a time */
            <form asp-controller="PlayerTeam" asp-action="Index" asp-route-TeamID="@Model?.ID">
                <div style="color: #F00;">@Html.ValidationSummary()</div>
                <input type="submit" value="View Players" class="btn btn-link" />
            </form>
            <form asp-action="MakeInactive">
                <input type="hidden" asp-for="ID" />
                <input type="submit" name="deactivate" value="Deactivate team and active players" class="btn btn-danger mt-2" />
            </form>
            <br />
        }

    }
    <form asp-action="MakeInactive">
        <input type="hidden" asp-for="ID" />
        <input type="submit" name="deactivate" value="Deactivate" class="btn btn-danger mt-2" />
        <a asp-action="Index" type="button" class="btn btn-primary mt-2">Back to Teams list</a>
    </form>
</div>
