                </td>
                <td class="d-none d-lg-table-cell">
                    @Html.DisplayFor(modelItem => modelItem.Statistics.StatsOPS)
                </td>
                <td class="d-none d-lg-table-cell">
                    @Html.DisplayFor(modelItem => modelItem.Statistics.StatsSLG)
                </td>
                <td class="d-none d-lg-table-cell">
                    @Html.DisplayFor(modelItem => modelItem.Statistics.StatsH)
