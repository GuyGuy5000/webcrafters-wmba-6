                @Html.DisplayNameFor(model => model.Statistics.StatsBB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td class="d-sm-table-cell d-md-table-cell">
                    @Html.DisplayFor(modelItem => modelItem.Statistics.StatsGP)
                </td>
                <td class="d-sm-table-cell d-md-table-cell">
                    @Html.DisplayFor(modelItem => modelItem.Statistics.StatsPA)
