@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body text-center">
                    <h1 class="card-title">@ViewData["Title"]</h1>
                    @if (Model.DisplayConfirmAccountLink)
                    {
                        <p class="card-text">
                            Please verify your email to confirm your account. Once your account confirmation is complete, 
                            please reach out to the administrator to assign your roles.
                        </p>
                    }
                    else
                    {
                        <p class="card-text">
                            Thank you for registering! Please check your email to confirm your account.
                        </p>
                    }
                    <a asp-controller="Home" asp-action="Index">Click Here to Go Back to Login Page</a>
                </div>
            </div>
        </div>
    </div>
</div>
