                        @Html.DisplayFor(modelItem => modelItem.Statistics.StatsRBI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Statistics.StatsBB)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <form asp-action="MakeInactive">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Deactivate" class="btn btn-outline-dark deactivateMain" />
        <a asp-action="Index" class="btn btn-outline-dark deactivateTp">Back </a>
    </form>
</div>
