@model wmbaApp.Models.Coach


<hr />
<form asp-action="Edit" class="mx-auto mt-4 editform" id="editform" style="width: 80%;">


    <fieldset>
        <partial name="_ViewHeading" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="CoachFirstName" class="control-label  required-label"></label>
            <input asp-for="CoachFirstName" class="form-control" placeholder="Ex:  Farooq" />
            <span asp-validation-for="CoachFirstName" class="text-danger"></span>
          
        </div>
        <div class="form-group">
            <label asp-for="CoachLastName" class="control-label  required-label"></label>
            <input asp-for="CoachLastName" class="form-control" placeholder="Ex: Leon" />
            <span asp-validation-for="CoachLastName" class="text-danger"></span>
          
        </div>

        <div id="customModal" class="modal">
            <div class="modal-content">
                <span class="close" id="close" onclick="closeModal()">&times;</span>
                <b><p id="question">Are you done, have you reviewed it?</p></b>
                <b><p id="required">All Fields are required</p></b>
                <i></i>
                <i id="saveCheck" class="fa-solid fa-question fa-f6"></i>
                <input type="submit" id="hideBtn" value="Save" class="btn btn-center btn-outline-dark" />

                <i id="error" class="fa-solid fa-xmark fa-f6"></i>
                <a asp-action="Index" id="bck" class="btn btn-center  btn-outline-dark" onclick="closeModal()">Back </a>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" id="btnView" value="Save" class="btn btn-outline-dark" />
            <button type="button" id="tmsBck" class="btn btn-outline-dark" onclick="openModal()">Back</button>
        </div>
    </fieldset>
           
        </form>



@section Scripts {
    <script src="~/js/site.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
