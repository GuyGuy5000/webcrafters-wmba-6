@page
@model ResetPasswordModel

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/login-design.css" asp-append-version="true" />
<style>
    .btn-reset-password {
        right: 22px;
        margin-top: 10px;
        padding: 10px 20px;
        font-size: 16px;
    }
</style>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <div class="card">
                <div class="card-body">
                    <h2 style="text-align: center;">Reset your password</h2>
                    <hr />

                    @if (!ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/Login", StringComparison.OrdinalIgnoreCase) &&
                    !ViewContext.HttpContext.Request.Path.Equals("/Identity/Account/Register", StringComparison.OrdinalIgnoreCase))
                    {
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <input asp-for="Input.Code" type="hidden" />

                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="Password">New Password</label>
                                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="Enter new password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="ConfirmPassword">Confirm Password</label>
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Confirm new password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary btn-block btn-reset-password"><i class="fas fa-key"></i> Reset Password</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
